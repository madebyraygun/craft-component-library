<div class="preview__header">
  <script type="application/json" id="preview-current">
    {{ current|json_encode|raw }}
  </script>
  <h2 class="header">
    <span class="material-symbols-outlined header__icon">{{current.icon}}</span>
    <span class="header__name">{{current.name}}</span>:
    <span class="header__handle">{{current.includeName}}</span>
  </h2>
  <div class="header__actions">
    {% include 'controls/button' with {
      icon: 'open_in_new',
      href: iframeUrl,
      target: '_blank'
    } %}
    {% include 'controls/button' with {
      class: 'preview__enter-full-btn',
      icon: 'fullscreen',
      href: '#fullscreen'
    } %}
    {% include 'controls/button' with {
      class: 'preview__exit-full-btn',
      icon: 'fullscreen_exit',
      href: '#fullscreen-exit'
    } %}
  </div>
</div>
<iframe id="preview-iframe" marginwidth="0" frameborder="0" scrolling="yes" src="{{iframeUrl}}"></iframe>
