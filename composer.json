{
  "name": "madebyraygun/craft-component-library",
  "description": "A fully-integrated component library system for Craft CMS",
  "version": "1.0.0",
  "type": "craft-plugin",
  "require": {
    "php": ">=8.2",
    "craftcms/cms": "^4.10.0||^5.0.0",
    "nystudio107/craft-plugin-vite": "^4.0||^5.0"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "madebyraygun\\componentlibrary\\": "src/"
    }
  },
  "support": {
    "docs": "https://github.com/madebyraygun/craft-component-library/blob/dev/README.md",
    "issues": "https://github.com/madebyraygun/craft-component-library/issues",
    "source": "https://github.com/madebyraygun/craft-component-library"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "madebyraygun",
      "homepage": "https://github.com/madebyraygun"
    }
  ],
  "extra": {
    "handle": "component-library",
    "name": "Component Library",
    "developer": "Raygun",
    "developerUrl": "https://github.com/madebyraygun",
    "documentationUrl": "https://github.com/madebyraygun/craft-component-library/blob/dev/README.md"
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}
